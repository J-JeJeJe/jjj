<!DOCTYPE html>
<html>
  <head>
    <title>JJJ</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="shadow-sm">
     <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand" href="#">コンテナ</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample07" aria-controls="navbarsExample07" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
    
        <div class="collapse navbar-collapse" id="navbarsExample07">
          <ul class="navbar-nav mr-auto">
            <% if member_signed_in? %>
              <li class="nav-item">
                <a class="nav-link">マイページ</a>
              </li>
              <li class="nav-item">
                <a class="nav-link">商品一覧</a>
              </li>
              <li class="nav-item">
                <a class="nav-link">カート</a>
              </li>
              <li class="nav-item">
                <a class="nav-link"><%= link_to "ログアウト", destroy_member_session_path, method: :delete %></a>
              </li>
            <% else %>
              <li class="nav-item">
                <a class="nav-link">About</a>
              </li>
              <li class="nav-item">
                <a class="nav-link">商品一覧</a>
              </li>
              <li class="nav-item">
                <a class="nav-link"><%= link_to "新規登録", new_member_registration_path %></a>
              </li>
              <li class="nav-item">
                <a class="nav-link"><%= link_to "ログイン", new_member_session_path %></a>
              </li>
            <% end %>
          </ul>
          <form class="form-inline my-2 my-md-0">
            <input class="form-control" type="text" placeholder="検索" aria-label="Search">
          </form>
        </div>
      </div>
     </nav>
    </header>
      <main>
        <p id="notice"><%= notice %></p>
        <%= yield %>
      </main>
    
    <footer class="pt-5 pb-5 bg-dark">
     <div class="container"></div>  
    </footer>
  </body>
</html>
