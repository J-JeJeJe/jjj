<div calss='container'>
  <div class='row justify-content-center mx-auto'>
    <!--カテゴリー検索-->
    <%= render 'admin/product_categories/categories', product_categories: @product_categories %>
    <!--検索結果一覧-->
    <div class="col-md-8">
      <div class="container mb-3 mt-2">
        <% if @how == "match" %>
          <h2 style=" text-shadow: 1px 1px 2px yellow;">ジャンル『<%= @product_category.name %>』で商品を検索</h2>
        <% elsif @how == "partical" %>
          <h2 style=" text-shadow: 1px 1px 2px yellow;">商品名『<%= @value %>』で商品を検索</h2>
        <% end %>
      </div>
    <div class="container shadow rounded bg-light">
      <div class="row shadow rounded bg-light">
      <div class=" container mb-3 mt-2">
        <h1  style="font-family: 'Kosugi Maru', sans-serif;"><strong>商品一覧</strong></h1>
      </div>
      <%= render 'public/products/card', products: datas %>
    </div>
    </div>
    </div>
      <%= paginate datas %>
  </div>
</div>