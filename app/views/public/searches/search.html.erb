<% if @how == "match" %>
  <h2>ジャンル『<%= @product_category.name %>』で商品を検索</h2>
  <% if @datas.empty? %>
  <h2>該当する商品はありません</h2>
  <% end %>
    <dev calss='container'>
    <div class='row justify-content-center mx-auto'>
      <div class="col-md-3">
        <div class="list-group">
          <table class="table table-bordered genre-table">
            <thead>
              <tr>
                <th>ジャンル検索</th>
              </tr>
            </thead>
            <tbody>
              <% @product_categories.each do |product_category| %>
                <tr>
                  <td>
                    <%= link_to product_category.name, search_path('search[value]': product_category, 'search[how]': "match")%>
                  </td>
                </tr>
              <% end %>
            </tbody>
            </table>
        </div>
      </div>
      <div class="col-md-8 mx-auto">
      	<h1>商品一覧</h1>
  			<% @datas.each do |data| %>
        <div class="col-md-3" style="float:left">
          <div class="card mb-3">
          	<%= link_to product_path(data) do %>
            	<%= attachment_image_tag data, :image, size: "400x400", class:"img-fluid"  %>
            <% end %>
            <div class="card-body">
              <h5 class="card-title"><%= data.title %></h5>
              <p class="card-text">¥<%= data.price %></p>
            </div>
          </div>
        </div>
        <% end %>
      </div>
      <%= paginate @datas %>
    </div>
  </div>
