<% if @how == "match" %>
  <% if @datas.empty? %>
    <div calss='container'>
      <div class='row justify-content-center mx-auto'>
        <!--カテゴリー検索-->
        <%= render 'admin/product_categories/categories', product_categories: @product_categories %>
        <!--検索結果一覧-->
        <div class="col-md-8 shadow rounded bg-light">
          <div class="container mb-3 mt-2">
            <h1 style="font-family: 'Kosugi Maru', sans-serif;"><strong>商品一覧</strong></strong></h1>
          </div>
          <h2>ジャンル『<%= @product_category.name %>』で商品を検索</h2>
          <h2>該当する商品はありません</h2>
        </div>
      </div>
    </div>
  <% else %>
    <%= render 'search_result', datas: @datas %>
  <% end %>
<% elsif @how == "partical" %>
  <% if @datas.empty? %>
    <div calss='container'>
      <div class='row justify-content-center mx-auto'>
         <!--カテゴリー検索-->
        <%= render 'admin/product_categories/categories', product_categories: @product_categories %>
        <!--検索結果一覧-->
        <div class="col-md-8 shadow rounded bg-light">
          <div class="container mb-3 mt-2">
            <h1 style="font-family: 'Kosugi Maru', sans-serif;"><strong>商品一覧</strong></strong></h1>
          </div>
          <h2>商品名『<%= @value %>』で商品を検索</h2>
          <h2>該当する商品はありません</h2>
        </div>
      </div>
    </div>
  <% else %>
    <%= render 'search_result', datas: @datas %>
  <% end %>
<% end %>
