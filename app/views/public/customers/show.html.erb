<div class="container">
 <div class="row d-flex align-items-center mx-auto my-auto justify-content-center">
  <div class="col-md-12 shadow p-3 mb-5 bg-white rounded">
   <div class="container">
    <div class="d-flex align-items-center p-3 mt-3 rounded shadow">
     <h1 class="mb-0 text-dark">マイページ</h1>
    </div>
   </div>
   <div class="container">
    <div class="row mx-auto">
   　 <div class="col-1"></div>
      <div class="col-3 py-auto mx-auto">
　　   <h3 class="my-0 shadow bg-white rounded text-center">登録情報</h3>
　　  </div>
　　  <div class="col-6 text-right pt-3 mx-auto">
　　   <%= link_to "編集する", edit_customer_registration_path, class:"btn btn-lg btn-success" %>
　　  </div>
　　 </div>
　　 <div class="row mx-auto">
　　 <div class="col-10 mx-auto">
      <table class="table">
  　    <tbody>
        <tr>
         <th><strong>氏名</strong></th>
         <td>
          <%= @customer.last_name %> <%= @customer.first_name %>
         </td>
        </tr>
       </tbody>
  　    <tbody>
        <tr>
         <th><strong>カナ</strong></th>
         <td>
          <%= @customer.last_name_kana %> <%= @customer.first_name_kana %>
         </td>
        </tr>
       </tbody>
  　    <tbody>
        <tr>
         <th><strong>郵便番号</strong></th>
         <td>
          <%= @customer.postal_code %>
         </td>
        </tr>
       </tbody>
  　    <tbody>
        <tr>
         <th><strong>住所</strong></th>
         <td>
          <%= @customer.address %>
         </td>
        </tr>
       </tbody>
        <tbody>
        <tr>
         <th><strong>電話番号</strong></th>
         <td>
          <%= @customer.phone_number %>
         </td>
        </tr>
       </tbody>
       <tbody>
        <tr>
         <th><strong>メールアドレス</strong></th>
         <td>
          <%= @customer.email %>
         </td>
        </tr>
       </tbody>
      </table>
     </div>
    </div>
    <div class="row mx-auto">
  　  <div class="col-3 py-auto mx-auto">
　　  <h3 class="mb-4 shadow bg-white rounded text-center">配送先</h3>
　　  <%= link_to "一覧を見る", shipping_addresses_path, class:"btn btn-lg btn-primary" %>
　　 </div>
  　 <div class="col-3 py-auto mx-auto">
　　 <h3 class="mb-4 shadow bg-white rounded text-center">注文履歴</h3>
　　 <%= link_to "一覧を見る", orders_path, class:"btn btn-lg btn-primary" %>
　　</div>
　 </div>　　
  </div>
 </div>
</div>
</div>