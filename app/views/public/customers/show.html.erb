<h3 class="box-title">登録情報</h3>
<%= link_to "編集する", customer_edit_path, class:"btn btn-success" %>
<table>
  <tr>
    <th>氏名</th>
    <th><%= @customer.last_name %> <%= @customer.first_name %></th>
  </tr>
  <tr>
    <th>カナ</th>
    <th><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></th>
  </tr>
  <tr>
    <th>郵便番号</th>
    <th><%= @customer.postal_code %></th>
  </tr>
  <tr>
    <th>住所</th>
    <th><%= @customer.address %></th>
  </tr>
  <tr>
    <th>電話番号</th>
    <th><%= @customer.phone_number %></th>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <th><%= @customer.email %></th>
  </tr>
</table>
<h3 class="box-title">配送先</h3>
<!--配送先一覧に変更必要-->
<%= link_to "一覧を見る", shipping_addresses_path, class:"btn btn-primary" %>
