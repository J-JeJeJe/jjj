<div class="container">
  <div class="row d-flex align-items-center mx-auto my-auto justify-content-center">
    <div class="col-md-10 shadow p-3 mb-5 bg-white rounded">
      <div class="container">
        <div class="d-flex align-items-center p-3 my-3 rounded shadow">
          <h1 class="mb-0 text-dark">注文履歴</h1>
        </div>
      </div>
      <div class="container">
        <div class="row d-flex align-items-center">
          <table class="table table-hover rounded shadow-sm p-3 my-3 bg-white">
            <thead class="thead-dark">
              <tr>
                <th scope="col">
                  <strong class="text-white">注文番号</strong>
                </th>
                <th scope="col">
                  <strong class="text-white">注文日</strong>
                </th>
                <th scope="col">
                  <strong class="text-white">配送先</strong>
                </th>
                <th scope="col">
                  <strong class="text-white">注文商品</strong>
                </th>
                <th scope="col">
                  <strong class="text-white">支払金額</strong>
                </th>
                <th scope="col">
                  <strong class="text-white">ステータス</strong>
                </th>
                <th scope="col"></th>
              </tr>
            </thead>
            <% @orders.each do |order| %>
              <tbody>
                <th scope="row"><%= order.id %></th>
                <td><%= order.created_at.strftime("%Y年%-m月%-d日 %-H時%-M分") %></td>
                <td><%= order.address %></td>
                <td>
                  <% order.order_items.each do |order_item| %>
                    <%= order_item.product.title %>
                  <% end %>
                </td>
                <td><%= order.amount %></td>
                <td><%= order.status %></td>
                <th><%= link_to "詳細", order_path(order), class: "btn btn-outline-primary mr-1" %></th>
              </tbody>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>