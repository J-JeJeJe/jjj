<div class="container">
  <div class="row d-flex align-items-center mx-auto my-auto justify-content-center">
    <div class="col shadow p-3 mb-5 bg-white rounded">
      <div class="container">
        <div class="d-flex align-items-center p-3 my-3 rounded shadow">
          <h1 class="mb-0 text-dark">注文履歴詳細</h1>
        </div>
      </div>
      <div class="container">
        <div class="row d-flex align-items-center mx-auto my-auto justify-content-center">
          <div class="col-md-7 shadow-sm p-3 mb-5 bg-white rounded">
            <table class="table">
              <tbody>
                <tr>
                  <th scope="col">注文日</th>
                  <td scope="col">
                      <%= @order.created_at %>
                  </td>
                </tr>
              </tbody>
              <tbody>
                <tr>
                  <th scope="row">配送先</th>
                  <td>
                      <%= @order.address %>
                  </td>
                </tr>
                <tr>
                  <th scope="row">支払方法</th>
                  <td>
                      <%= @order.payment_method %>
                  </td>
                </tr>
                <tr>
                  <th scope="row">ステータス</th>
                  <td>
                      <%= @order.status %>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
          <div class="col-auto">

          </div>

          <div class="col-md-4 shadow-sm p-3 mb-5 bg-white rounded">
            <table class="table">
              <tbody>
                <tr>
                  <th scope="row">請求情報</th>
                  <td>
                      <%= @order.total_price %>
                  </td>
                </tr>
                <tr>
                  <th scope="row">配送料</th>
                  <td>
                      <%= @order.postage %>
                  </td>
                </tr>
                <tr>
                  <th scope="row">請求額</th>
                  <td>
                      <%= @order.amount %>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="container">
        <div class="row d-flex align-items-center mx-auto my-auto justify-content-center">
          <div class="col-9 rounded shadow-sm p-3 bg-white">
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">商品</th>
                  <th scope="col">単価（税込）</th>
                  <th scope="col">個数</th>
                  <th scope="col">小計</th>
                </tr>
              </thead>
              <% @order_items.each do |order_item| %>
                <tbody>
                  <tr>
                  <td scope="row"><%= order_item.product.title %></td>
                  <td scope="row"><%= order_item.product.price %></td>
                  <td scope="row"><%= order_item.quantity %></td>
                  <td scope="row"><%= order_item.sub_total %></td>
                  </tr>
                </tbody>
              <% end %>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>