<div class="container">
  <div class="row d-flex align-items-center mx-auto my-auto justify-content-center">
    <div class="col-md-11 shadow p-3 my-5 bg-white rounded">

      <h3 class="mb-3 shadow-sm bg-white rounded">支払方法</h3>
      <div class="container">
        <div class="row">
          <div class="col-md-8 mb-5 shadow p-3 mb-5 bg-white rounfed">

            <table class="table">
              <thead>
                <tr>
                  <th scope="col">商品名</th>
                  <th scope="col">単価（税込）</th>
                  <th scope="col">数量</th>
                  <th scope="col">小計</th>
                </tr>
              </thead>
              <% @cart_items.each do |cart_item| %>
              <tbody>
                <tr>
                  <td scope="row">
                    <%= attachment_image_tag cart_item.product, :image, :fill, 40,40, class:"img-fluid" %>
                    <%= cart_item.product.title %>
                  </td>
                  <td scope="row">
                    <%= cart_item.add_tax_price.to_s(:delimited) %>
                  </td>
                  <td scope="row">
                    <%= cart_item.quantity %>
                  </td>
                  <td scope="row">
                    <%= cart_item.sub_total.to_s(:delimited) %>
                  </td>
                </tr>
              </tbody>
              <% end %>

            </table>
          </div>

          <div class="col-auto">

          </div>

          <div class="col-md-3 shadow p-3 mb-5 bg-white rounded">
            <table class="table">

              <tbody>
                <tr>
                  <th scope="col">送料</th>
                  <td scope="col"><%= @order.postage %></td>
                </tr>
              </tbody>

              <tbody>
                <tr>
                  <th scope="row">商品合計</th>
                  <td scope="row">
                    <%= @total.round.to_s(:delimited) %>
                  </td>
                </tr>
              </tbody>
              <tbody>
                <tr>
                  <th scope="row">請求金額</th>
                  <td scope="row">
                    <%= @order.amount.to_s(:delimited) %>
                  </td>
                </tr>
              </tbody>

            </table>
          </div>
        </div>
      </div>

      <div class="container">
        <div class="row d-flex align-items-center">
          <div class="col-9 p-3 bg-white">
            <table class="table table-borderless">
              <thead>
                <tr>
                  <th scope="col"><h5><strong>支払方法</strong></h5></th>
                  <th scope="col">
                    <% if @order.payment_method == true %>
                      <p>クレジットカード</p>
                    <% elsif @order.payment_method == false %>
                      <p>銀行支払</p>
                    <% end %>
                  </th>
                </tr>
              </thead>

              <tbody>
                <tr>
                  <td scope="row"><h5><strong>お届け先</strong></h5></td>
                  <td scope="row">
                      〒<%= @order.postal_code %> <%= @order.address %></br>
                      <%= @order.name %></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <%= form_with model: @order, url: orders_path, method: :post, local:true do |f| %>
		    <%= f.hidden_field :customer_id, value: current_customer.id %>
		    <%= f.hidden_field :name, value: @order.name %>
		    <%= f.hidden_field :postal_code, value: @order.postal_code %>
		    <%= f.hidden_field :address, value: @order.address %>
		    <%= f.hidden_field :payment_method, value: @order.payment_method %>
		    <%= f.hidden_field :total_price, value: @total %>
		    <%= f.hidden_field :postage, value: @order.postage %>
		    <%= f.hidden_field :amount, value: @order.amount %>
		    <%= f.hidden_field :address_status, value: @address_status %>
		    <%= f.submit "注文を確定する", class: "btn btn-outline-success" %>
	    <% end %>

    </div>
  </div>
</div>




