    <th>請求金額</th>
    <th><%#= total_price %></th>
  </tr>
</table>
<h3 class="box-title">支払方法</h3>
  <% if @order.payment_method == true %>
    <p>クレジットカード</p>
  <% elsif @order.payment_method == false %>
    <p>銀行支払</p>
  <% end %>
<h3 class="box-title">お届け先</h3>
  <%= form_with model: @order, local:true do |f| %>
		<%= f.hidden_field :menber_id, value: current_customer %>
		<%= f.hidden_field :name, value: @order.name %>
		


  
  
