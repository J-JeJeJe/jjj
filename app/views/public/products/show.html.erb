<dev calss='container'>
  <div class='row'>
    <div class="col-md-3 mx-auto">
      <div class="card">
        <article>
          <div class="card-header">
            ジャンル
          </div>
          <ul class="list-group list-group-flush">
          <li class="list-group-item">ケーキ</li>
          <li class="list-group-item">焼き菓子</li>
          <li class="list-group-item">プリン</li>
        </ul>

      </div>
    </div>
    <div class="col-md-8 mx-auto">
      <div class="card mb-3">
        <div class="row no-gutters">
          <div class="col-md-4 my-auto">
            <%= attachment_image_tag @product, :image,class:"img-fluid" %>
          </div>
          <div class=class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><%= @product.title %></h5>
              <p class="card-text"><%= @product.description %></p>
              <h5 class="card-price"><%= @product.price %></h5>
              
              <%= form_with model: @cart_item, url: cart_items_path, local:true do |f| %>
              <%= f.hidden_field :product_id, value: @product.id %>
              <%= f.hidden_field :customer_id, value: current_customer.id %>
              <%= f.select :quantity, [1,2,3,4,5,6,7,8,9], {include_blank: '選択ボックス'} , required:true %>
              <%= f.submit "カートに入れる", class:"btn btn-success" %>
              <% end %>
            </div>
          </div>
      </div>
    </div>
  </div>
</div>