<h4>配送先登録/一覧</h4>
<%= form_with model: @shipping_address, url: shipping_addresses_path, local:true do |f| %>
 <label for="postal_code">郵便番号（ハイフンなし）</label>
 <%= f.text_field :postal_code, placeholder: "0000000" %><br/>
 <label for="address">住所</label>
 <%= f.text_field :address, size: 60, placeholder: "東京都渋谷区代々木神園町0-0" %><br/>
 <label for="name">宛名</label>
 <%= f.text_field :name, placeholder: "令和道子" %>
 
 <%= f.submit '新規登録' %>
<% end %>

<table>
 <thead>
  <tr>
   <th>郵便番号</th>
   <th>住所</th>
   <th>宛名</th>
   <th></th>
  </tr>
 </thead>
 <% @shipping_addresses.each do |shipping_address| %>
 <tbody>
  <tr>
   <td><%= shipping_address.postal_code %></td>
   <td><%= shipping_address.address %></td>
   <td><%= shipping_address.name %></td>
   <td>
     <%= link_to "編集する", edit_shipping_address_path(shipping_address.id) %>
     <%= link_to "削除する", shipping_address_path(shipping_address.id), method: :delete %>
   </td>
  </tr>
 </tbody>
 <% end %>

</table>