<dev calss='container'>
  <div class='row justify-content-center mx-auto'>
    <div class="col-md-3">
      <div class="list-group">
          <table class="table table-bordered genre-table">
            <thead>
              <tr>
                <th>ジャンル検索</th>
              </tr>
            </thead>
            <tbody>
              <% @product_categories.each do |product_category| %>
                <tr>
                  <td>
                    <%= link_to product_category.name, search_path('search[value]': product_category, 'search[how]': "match")%>
                  </td>
                </tr>
                <% end %>
            </tbody>
          </table>
      </div>
    </div>
    <div class="col-md-8">
      <div class="jumbotron" >
        <div class="container">
          <h1 class="display-4 font-weight-bold text-light">ようこそ NAGANO CAKE へ</h1>
          <p class="lead font-weight-bold text-light">
            このサイトは、ケーキ販売のECサイトになります。<br>
            会員でない方は商品の閲覧はできますが、購入には会員登録が必要になりまっす
          </p>
          <hr class="my-4">
          <%= link_to "About Us", public_home_about_path, class:"btn btn-primary btn-lg" %>
        </div>
      </div>

<div class="container">
    <h1 class="pb-3 mb-4" style="font-family: 'STIX Two Text', serif;">New Arrival</h1>
</div>
    <div class="slider">
      <% @products.each do |product| %>
      <div class="col-md-4" style="float:left">
            <div class="card mb-3">
              <%= link_to product_path(product) do %>
          	    <%= attachment_image_tag product, :image, :fill, 400, 400, class:"img-fluid"  %>
              <% end %>
              <div class="card-body">
                <h5 class="card-title"><%= product.title %></h5>
                <p class="card-text">¥<%= product.price %></p>
                <%= link_to "詳細", product_path(product), class: "btn btn-outline-success" %>
              </div>
            </div>
          </div>
          <% end %>
          </div>
    </div>
  </div>
</div>
