<div class="container">
  <div class="d-flex align-items-center p-3 my-3 rounded shadow">
    <h1 class="mb-0 text-dark">注文履歴一覧</h1>
  </div>
</div>
<div class="container">
  <div class="row d-flex align-items-center">
    <table class="table table-hover rounded shadow p-3 bg-w">
      <thead class="thead-dark">
        <tr>
          <th scope="col">
            <strong class="text-white">購入日時</strong>
          </th>
          <th scope="col">
            <strong class="text-white">購入者</strong>
          </th>
          <th scope="col">
            <strong class="text-white">注文個数</strong>
          </th>
          <th scope="col">
            <strong class="text-white">注文ステータス</strong>
        </thead>
        <% @orders.each do |order| %>
          <tbody>
            <tr>
              <td><%= order.created_at.strftime("%Y年%-m月%-d日 %-H時%-M分") %></td>
              <td><%= order.name %></td>
              <td><%#= order.quantity %></td>
              <td><%= order.status %></td>
            </tr>
          </tbody>
        <% end %>
      </table>
      <%= paginate @orders %>
      </div>
  </div>
