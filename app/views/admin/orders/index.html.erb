<div class="container">
  <div class="row d-flex align-items-center mx-auto my-auto justify-content-center">
    <div class="col-md-10 shadow p-3 mb-5 bg-white rounded">
      <div class="container">
        <div class="text-center mt-2 mb-3 border-bottom">
          <h1 class="mb-0"><strong>注文履一覧</strong></h1>
        </div>
      </div>
    <div class="container">
        <div class="row d-flex align-items-center">
          <table class="table table-hover rounded shadow-sm p-3 bg-w">
            <thead class="thead-dark">
              <tr>
                <th scope="col">
                  <strong class="text-white">購入日時</strong>
                </th>
                <th scope="col">
                  <strong class="text-white">購入者</strong>
                </th>
                <th scope="col">
                  <strong class="text-white">注文個数</strong>
                </th>
                <th scope="col">
                  <strong class="text-white">注文ステータス</strong>
                </th>
                <th></th>
              </tr>
            </thead>
            <% @orders.each do |order| %>
              <tbody>
                <tr>
                  <td><%= order.created_at.strftime("%Y年%-m月%-d日 %-H時%-M分") %></td>
                  <td><%= order.name %></td>
                  <td><%= order.order_items.sum(:quantity) %></td>
                  <td><%= order.status %></td>
                  <td><%= link_to "詳細", admin_order_path(order), class: "btn btn-outline-primary" %></td>
                </tr>
              </tbody>
            <% end %>
          </table>
          <%= paginate @orders %>
        </div>
      </div>
    </div>
  </div>
</div>
