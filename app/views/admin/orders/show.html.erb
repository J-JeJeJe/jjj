<div class="container">
  <div class="d-flex align-items-center p-3 my-3 rounded shadow">
    <h1 class="mb-0 text-dark">注文履歴詳細</h1>
  </div>
</div>
<dev calss='container'>
  <div class='row'>
    <div class="col-md-3 mx-auto">
      <ul class="list-group list-group-flush">
        <li class="list-group-item">購入者</li>
        <li class="list-group-item">注文日</li>
        <li class="list-group-item">配送先</li>
        <li class="list-group-item">支払い方法</li>
        <li class="list-group-item">注文ステータス</li>
      </ul>
    </div>
    <div class="col-md-8 mx-auto">
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><%= @order.name %></li>
        <li class="list-group-item"><%= @order.created_at.strftime("%Y/%-m/%-d")%></li>
        <li class="list-group-item"><%= @order.postal_code %></li>
        <li class="list-group-item">
          <% if @order.payment_method == true %>
            <p>クレジットカード</p>
          <% elsif @order.payment_method == false %>
            <p>銀行支払</p>
          <% end %>
        </li>
        <li class="list-group-item"><%= @order.status %></li>
      </ul>
    </div>
  </div>
</div>
<dev calss='container'>
  <div class='row d-flex align-items-center'>
    <div class="col-md-8 mx-auto">
      <table class="table table-hover rounded shadow p-3 bg-w">
      <thead class="thead-dark">
        <tr>
          <th scope="col">
            <strong class="text-white">商品名</strong>
          </th>
          <th scope="col">
            <strong class="text-white">単価（税込）</strong>
          </th>
          <th scope="col">
            <strong class="text-white">数量</strong>
          </th>
          <th scope="col">
            <strong class="text-white">小計</strong>
          </th>
          <th scope="col">
            <strong class="text-white">制作ステータス</strong>
          </th>
          <th></th>
        </thead>
        <% @orders.each do |order| %>
          <tbody>
            <tr>
              <td><%= order.created_at.strftime("%Y年%-m月%-d日 %-H時%-M分") %></td>
              <td><%= order.name %></td>
              <td><%#= order.quantity %></td>
              <td><%= order.status %></td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
    <div class="col-md-4 mx-auto">
      <ul class="list-group list-group-flush">
        <li class="list-group-item">商品合計<%= @order.total_price %></li>
        <li class="list-group-item">送料<%= @order.postage %></li>
        <li class="list-group-item">請求金額合計</li>
      </ul>
    </div>
  </div>
</div>







