<div class="container mx-auto">
 <div class="row d-flex align-items-center my-auto justify-content-center" style="height: 80vh;">
  <div class="col-auto shadow p-3 bg-white rounded">
   <div class="text-center signin d-flex pt-5 pb-5" id="form-signin">

    <%= form_with model:@admin, url: session_path(resource_name),class: "form-signin", local:true do |f| %>
     <h1 class="h3 mb-4 font-weight-normal">ログイン</h1>
     
      <div class="form-group">
       <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email address" %>
      </div>

      <div class="form-group">
       <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password" %>
      </div>

      <div class="actions">
       <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block" %>
      </div>
     <% end %>

    </div>
   </div>
  </div>
</div>
