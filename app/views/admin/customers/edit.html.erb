<div class="container">
  <div class="row d-flex align-items-center mx-auto my-auto justify-content-center">
    <div class="col-md-10 shadow p-3 mb-5 bg-white rounded">
      <div class="container">
        <div class="text-center mt-2 mb-3 border-bottom">
          <h1 class="mb-0"><strong><%= @customer.full_name %>さんの会員詳細</strong></h1>
        </div>
      </div>
      <div class="container">
        <div class="row d-flex align-items-center">
          <div class="col-md-8 mx-auto rounded shadow-sm my-3 bg-white">
            <%= form_with model: @customer, url: admin_customer_path, local: true do |f| %>
            <table class="table table-borderless">
              <tbody>
                <tr>
                  <th scope="col"><strong>会員ID</strong></th>
                  <td scope="col"><%= @customer.id %></th>
                </tr>
              </tbody>
      
              <tbody>
                <tr>
                  <th scope="col"><strong>氏名</strong></th>
                  <td scope="col"><%= f.text_field :last_name, class: "form-control" %></th>
                  <td scope="col"><%= f.text_field :first_name, class: "form-control" %></th>
                </tr>
              </tbody>
      
              <tbody>
                <tr>
                  <th scope="col"><strong>フリガナ</strong></th>
                  <td scope="col"><%= f.text_field :last_name_kana, class: "form-control" %></th>
                  <td scope="col"><%= f.text_field :first_name_kana, class: "form-control" %></th>
                </tr>
              </tbody>
      
              <tbody>
                <tr>
                  <th scope="col"><strong>郵便番号</strong></th>
                  <td scope="col"><%= f.text_field :postal_code, class: "form-control" %></th>
                </tr>
              </tbody>
      
              <tbody>
                <tr>
                  <th scope="col"><strong>住所</strong></th>
                  <td scope="col"><%= f.text_field :address, class: "form-control" %></th>
                </tr>
              </tbody>
      
              <tbody>
                <tr>
                  <th scope="col"><strong>電話番号</strong></th>
                  <td scope="col"><%= f.text_field :phone_number, class: "form-control" %></th>
                </tr>
              </tbody>
      
              <tbody>
                <tr>
                  <th scope="col"><strong>メールアドレス</strong></th>
                  <td scope="col"><%= f.text_field :email, class: "form-control" %></th>
                </tr>
              </tbody>
      
              <tbody>
                <tr>
                  <th scope="col"><strong>会員ステータス</strong></th>
                  <td scope="col">
                    <% if @customer.is_deleted == true %>
                      <%= f.radio_button :is_deleted, :false %>
                      <%= f.label :is_deleted, "有効", {value: :false, style: "display: inline-block;"} %>
                      <%= f.radio_button :is_deleted, :true %>
                      <%= f.label :is_deleted, "退会", {value: :true, checked: true, style: "display: inline-block;"} %>
                    <% elsif @customer.is_deleted == false %>
                      <%= f.radio_button :is_deleted, :false %>
                      <%= f.label :is_deleted, "有効", {value: :false,checked: true,style: "display: inline-block;"} %>
                      <%= f.radio_button :is_deleted, :true %>
                      <%= f.label :is_deleted, "退会", {value: :true, style: "display: inline-block;"} %>
                    <% end %>
                  </td>
                </tr>
              </tbody>
      
              <tbody>
                <tr>
                  <th scope="col" class="text-center mb-3">
                    <%= f.submit "変更", class: "btn btn-success btn-lg mr-1" %>
                  </th>
                </tr>
              </tbody>
      
            </table>
            <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>