<div class="container p-3 my-3 bg-white rounded shadow">
 <div class="cantainer">
  <div class="d-flex align-items-center p-3 my-3 bg-white rounded shadow">
   <h1 class="mb-0 text-dark">会員一覧</h1>
   </div>
  </div>
  <div class="container">
   <div class="row d-flex align-items-center text-center">
    <table class="table table-hover rounded shadow my-3 bg-white">
      <thead class="thead-dark">
        <tr>
          <th scope="col"><strong class="text-white">会員ID</strong></th>
          <th scope="col"><strong class="text-white">氏名</strong></th>
          <th scope="col"><strong class="text-white">メールアドレス</strong></th>
          <th scope="col"><strong class="text-white">ステータス</strong></th>
          <th scope="col"></th>
          </tr>
        </thead>
        <% @customers.each do |customer| %>
          <tbody>
            <th scope="row"><%= customer.id %></th>
            <td><%= customer.full_name %></td>
            <td><%= customer.email %></td>
            <td><% if customer.is_deleted == true %>
                  <p class="text-muted">退会</p>
                <% elsif customer.is_deleted == false %>
                  <p class="text-success">有効</p>
                <% end %>
            </td>
            <td><%= link_to "詳細", admin_customer_path(customer), class: "btn btn-primary mr-1" %></td>
           </tbody>
          <% end %>
         </table>
        </div>
       </div>
      </div>