<div class="mx-auto" style="width: 30%;">
<h4>商品新規登録</h4>
<%= form_with model: @product, url: admin_products_path, local:true do |f| %>

  <label for="image">商品画像</label>
  <%= f.attachment_field :image %></br>
  <label for="title">商品名</label>
  <%= f.text_field :title %></br>
  <label for="description">商品説明</label>
  <%= f.text_area :description %></br>
  <label for="product_category_name">ジャンル</label>
  <%= f.collection_select :product_category_, ProductCategory.all, :id, :name, prompt: "--選択してください--" %></br>
  <label for="price">税抜価格</label>
  <%= f.text_field :price %>円</br>
  <label for="sell_status">販売ステータス</label>
  
   <%= f.radio_button :sell_status, :true, checked:true %>
   <span>販売中</span>
   <%= f.radio_button :sell_status, :false %>
   <span>販売停止中</span>
  <%= f.submit '新規登録' %>
<% end %>
</div>