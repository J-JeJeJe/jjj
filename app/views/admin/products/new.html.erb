<h2>商品新規登録</h2>
<%= form_with model: @product, local:true do |f| %>
  <h4>商品画像</h4>
  <%= f.attachment_field :image %>
  <h4>商品名</h4>
  <%= f.text_field :title %>
  <h4>商品説明</h4>
  <%= f.text_area :description %>
  <h4>ジャンル</h4>
  <%= f.collection_select :product_category_name, ProductCategory.all, :id, :name, prompt: "--選択してください--" %>
  <h4>税抜価格</h4>
  <%= f.number_field :price %>円
  <h4>販売ステータス</h4>
   <%= f.radio_button :sell_status, :sale %>
   <%= f.label :sell_status, "販売中", {value: :sale, style: "display: inline-block;"} %>
   <%= f.radio_button :sell_status, :suspended %>
   <%= f.label :sell_status, "販売停止中", {value: :suspended, style: "display: inline-block;"} %>
  <%= f.submit '新規登録' %>
<% end %>