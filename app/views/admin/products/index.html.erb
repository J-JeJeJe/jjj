<div class="index">
<h4>商品一覧</h4>
<div class="icon">
<%= link_to new_admin_product_path, class:"text-secondary"  do %>
　<i class="fas fa-plus"></i>
<% end %>
</div>


 <table class="table">

     <thead class="thead-light">
         <tr>
         <th>商品ID</th>
         <th>商品名</th>
         <th>税抜価格</th>
         <th>ジャンル</th>
         <th>ステータス</th>
         </tr>
     </thead>
     <% @products.each do |product| %>
     <tbody>
         <tr>
          <td>
           <%= product.id %>
          </td>
          <td>
           <%= link_to admin_product_path(product.id), class:"text-dark", style:"border-bottom: solid 1px #212529;" do %>
            <%= product.title %>
           <% end %>
          </td>
          <td><%= product.price %></td>
          <td><%= product.product_category.name %></td>
          <td>
           <% if product.sell_status == true %>
           <p class="text-success">
            <%= product.sell_status = "販売中" %>
           </p>
           <% else %>
           <p class="text-secondary">
            <%= product.sell_status = "販売停止中" %>
            </p>
           <% end %>
          </td>
         </tr>
     </tbody>
     <% end %>
 </table>


<%= paginate @products %>
</div>
