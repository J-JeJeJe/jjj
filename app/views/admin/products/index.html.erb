<h4>商品一覧</h4>
<%= link_to new_admin_product_path, class:"text-secondary"  do %>
　<i class="fas fa-plus"></i>
<% end %>


 <table class="table">
  
     <thead class="thead-light">
         <tr>
         <th>商品ID</th>
         <th>商品名</th>
         <th>税抜価格</th>
         <th>ジャンル</th>
         <th>ステータス</th>
         </tr>
     </thead>
     <% @products.each do |product| %>
     <tbody>
         <tr>
          <td>
           <%= product.id %>
          </td>
          <td>
           <%= link_to admin_product_path(product.id) do %>
            <%= product.title %>
            <% end %>
          </td>
          <td><%= product.price %></td>
          <td><%= product.product_category.name %></td>
          <td><%= product.sell_status %></td>
         </tr>
     </tbody>
     <% end %>
 </table>


<%= paginate @products %>
